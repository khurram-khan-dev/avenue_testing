<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="avenue_invoice_report_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                
                <div class="header" style="font-size:0.8rem;">
                    
                    
                      <div class="row p-2">
                        
                        <div class="col-2">
                          <img t-if="o.company_id.logo_web" t-att-src="image_data_uri(o.company_id.logo_web)" style="position:absolute;top:10px;left:350px;width:160pt;height:92pt;" alt="company logo"/>
                          <!--<img t-if="o.company_id.logo_web" t-att-src="image_data_uri(o.company_id.logo_web)" style="position:absolute;top:10px;left:370px;max-height: 45px;" alt="company log"/>                        -->
                        </div>
                        
                        
                      </div>

                     
                      <br/>
                      <br/>
                      <br/>
                      <br/>
                      <br/>
                      <br/>
                      
                      
                        
                      <div class="row p-2">
                        <div class="col-4"/>
                        <div class="col-7" style="color:#432CC5;">
                          <h2>Quotation For Purchase </h2>
                        </div>
                      </div>
                      
                      
                      <div class="row p-2">
                        <div class="col-8"/>
                        <div class="col-4" style="font-size:20px;">
                          Date: <u><t if="o.invoice_date" t-raw="o.invoice_date"/></u>
                        </div>
                      </div>

                      <div class="row p-2">
                        <div class="col-8"/>
                        <div class="col-4" style="font-size:20px;">
                          Ref: <u><t if="o.internal_ref" t-raw="o.internal_ref"/></u>
                        </div>
                      </div>
                      
                      <div class="row p-2" style="background-color:#0052cc;">
                        
                        <div class="col-1"/>
                        <div class="col-8" style="font-size:20px;color:white;">
                          Purchase's Details
                        </div>
                        
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-5" style="font-size:20px;">
                          Name:<u>   <t if="o.partner_id.name" t-raw="o.partner_id.name"/>&#160;&#160;&#160;</u>
                        </div>
                        <!--<div class="col-1"></div>-->
                        <div class="col-5" style="font-size:20px;">
                          Employee Name:<u>   <t if="o.employee_name" t-raw="o.employee_name"/>&#160;&#160;&#160;</u>
                        </div>
                      </div>
                      

                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-11" style="font-size:20px;">
                          Address:<u>   <t if="o.partner_id" t-raw="o.partner_id.contact_address_complete"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                   
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-5" style="font-size:20px;">
                          Project:<u>   <t if="o.project_name" t-raw="o.project_name"/>&#160;&#160;&#160;</u>
                        </div>
                        <!--<div class="col-1"></div>-->
                        <div class="col-5" style="font-size:20px;">
                          City:<u>   <t if="o.partner_id" t-raw="o.partner_id.city"/>&#160;&#160;&#160;</u>
                        </div>
                      </div>
                      
                   
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-5" style="font-size:20px;">
                          Unit Size:<u>   <t if="o.plot_size" t-raw="o.plot_size"/>&#160;&#160;&#160;</u>
                        </div>
                        <!--<div class="col-1"></div>-->
                        <div class="col-5" style="font-size:20px;">
                          Unit Type:<u>   <t if="o.unit_type" t-raw="o.unit_type"/>&#160;&#160;&#160;</u>
                        </div>
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2" style="background-color:#0052cc;">
                        
                        <div class="col-1"/>
                        <div class="col-8" style="font-size:20px;color:white;">
                          Payment's Details
                        </div>
                        
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-11" style="font-size:20px;">
                          Cost Payable:<u>   <t if="o.cost" t-raw="o.cost"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                 
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-5" style="font-size:20px;">
                          Additional Cost:<u>   <t if="o.additional_price" t-raw="o.additional_price"/>&#160;&#160;&#160;</u>
                        </div>
                        <!--<div class="col-1"></div>-->
                        <div class="col-5" style="font-size:20px;">
                          Additional Detail:<u>&#160;<t if="o.ref" t-raw="o.ref"/>&#160;</u>
                        </div>
                      </div>
                      
                    
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-11" style="font-size:20px;">
                          <t t-if="o.discount_builder">
                              Discount By Builder:<u>   <t if="o.discount_builder" t-raw="o.discount_builder"/>&#160;&#160;&#160;</u>
                          </t>
                                    
                          <t t-if="not o.discount_builder">
                              Discount By Avenue:<u>   <t if="o.invoice_line_ids[0].price_subtotal" t-raw="o.invoice_line_ids[0].price_subtotal"/>&#160;&#160;&#160;</u>
                          </t>
                        </div>
                        
                      </div>
                      
                
                      
                      <div class="row p-2">
                        <div class="col-1"/>
                        <div class="col-11" style="font-size:20px;">
                          Total Payable:<u>   <t if="o.total_payable" t-raw="o.total_payable"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2" style="background-color:#0052cc;">
                        
                        <div class="col-1"/>
                        <div class="col-8" style="font-size:20px;color:white;">
                          Deposit Schedule
                        </div>
                        
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-4" style="font-size:20px;">
                          Payment Type
                        </div>
                        <div class="col-4" style="font-size:20px;">

                            Amount Due
                        </div>
                        <div class="col-3" style="font-size:20px;">
                              Due Date
                        </div>
                        
                      </div>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-3" style="font-size:20px;">
                          Token
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.token_amount" t-raw="o.token_amount"/>&#160;&#160;&#160;</u>
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.token_date" t-raw="o.token_date"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-3" style="font-size:20px;">
                          1st Deposit
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.f_deposit_amount" t-raw="o.f_deposit_amount"/>&#160;&#160;&#160;</u>
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.f_deposit_date" t-raw="o.f_deposit_date"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-3" style="font-size:20px;">
                          2nd Deposit
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.s_deposit_amount" t-raw="o.s_deposit_amount"/>&#160;&#160;&#160;</u>
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.s_deposit_date" t-raw="o.s_deposit_date"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-3" style="font-size:20px;">
                          3rd Deposit
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.t_deposit_amount" t-raw="o.t_deposit_amount"/>&#160;&#160;&#160;</u>
                        </div>
                        <div class="col-4" style="font-size:20px; text-align: center;">
                          <u>  <t if="o.t_deposit_date" t-raw="o.t_deposit_date"/>&#160;&#160;&#160;</u>
                        </div>
                        
                      </div>
                      
                      <br/>
                      
                      <div class="row p-2">
                        
                        <div class="col-1"/>
                        <div class="col-10" style="font-size:20px;">
                          <p style="font-weight:200;"> <t if="o.company_id" t-raw="o.company_id.street"/> <t if="o.company_id" t-raw="o.company_id.street2"/> <t if="o.company_id" t-raw="o.company_id.city"/> <t if="o.company_id" t-raw="o.company_id.state_id.name"/> <t if="o.company_id" t-raw="o.company_id.zip"/> <t if="o.company_id" t-raw="o.company_id.country_id.name"/>
                          <br/>
                                              
                          <t if="o.company_id" t-raw="o.company_id.website"/>
                                              
                          <t if="o.company_id" t-raw="o.company_id.phone"/>
                          </p>
                        </div>
                        
                        
                      </div>
                      
                </div>
            </t>
        </t>




    </template>


</odoo>