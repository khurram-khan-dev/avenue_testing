<odoo>
    <record id="inv_ext_field" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

        <!-- <header> 
        <button string="Compute Commision" name="action_check" type="object" class="oe_highlight"/>

        </header> -->

            <xpath expr="//field[@name='amount_total']" position="attributes">

                        <attribute name="string">Commision Amount</attribute>

            </xpath>

            <xpath expr="//field[@name='amount_untaxed']" position="attributes">

                        <attribute name="string">Discount By Avennue</attribute>

            </xpath>

            <xpath expr="//field[@name='payment_reference']" position="after">
            
                        <field name="project_name" />
                        <field name="plot_size" />
                        <field name="internal_ref" />
                        <field name="price" />            
            
            </xpath>

            <xpath expr="//div[@name='journal_div']" position="after">
            
                        <field name="additional_price" />
                        <field name="cost" />
                        <field name="discount_builder" />
                        <field name="gross_amount" />              
            
            </xpath>

            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page name="deposit_schedule" string="Deposit Schedule" >

                    <group>
                        <group string="Other Info" name="other_info">
                            <field name="employee_name"/>
                            <field name="unit_type"/>
                            <field name="total_payable"/>
                        </group>

                        <group string="Token" name="token">
                            <field name="token_amount"/>
                            <field name="token_date"/>
                        </group>

                        <group string="1st Deposit" name="f_deposit">
                            <field name="f_deposit_amount"/>
                            <field name="f_deposit_date"/>
                        </group>

                        <group string="2nd Deposit" name="s_deposit">
                            <field name="s_deposit_amount"/>
                            <field name="s_deposit_date"/>
                        </group>

                        <group string="3rd Deposit" name="t_deposit">
                            <field name="t_deposit_amount"/>
                            <field name="t_deposit_date"/>
                        </group>

                    </group>

                </page>
            </xpath>

        </field>

    </record>
</odoo>